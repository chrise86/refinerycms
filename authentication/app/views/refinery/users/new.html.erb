
<%= form_for :user, :url => refinery.signup_path, html: { class: 'ui form' } do |f| -%>

  <div class="ui segment attached top secondary">
    <%= t('there_are_no_users', :scope => 'refinery.welcome') %>
  </div>

  <div class="ui attached segment">
    <%= render '/refinery/admin/error_messages', :object => @user, :include_object_name => true %>

    <div class='field'>
      <%= f.label :username %>
      <%= f.text_field :username, :class => 'larger widest' %>
    </div>
    <div class='field'>
      <%= f.label :email %>
      <%= f.text_field :email, :class => 'larger widest' %>
    </div>
    <div class='field'>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'larger widest' %>
    </div>
    <div class='field'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => 'larger widest' %>
    </div>

  </div>

  <!-- <div class="ui two bottom attached large buttons"> -->
    <%= render '/refinery/admin/form_actions', :f => f,
               :submit_continue => false,
               :submit_button_text => t('sign_up', :scope => 'refinery.users.new'),
               :hide_delete => true,
               :hide_cancel => true %>
 <!-- </div> -->
<% end -%>
